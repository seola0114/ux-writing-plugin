{
  "root": true,
  "env": {
    "es2022": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "figma": "readonly",
    "__html": "readonly"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs"]
      }
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-constant-condition": ["error", { "checkLoops": false }],
    "import/no-unresolved": "off",
    "import/no-absolute-path": "off",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "smart"]
  },
  "overrides": [
    {
      "files": ["**/*.config.js", "**/*.config.mjs"],
      "env": { "node": true }
    }
  ]
}